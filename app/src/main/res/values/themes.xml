<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockScreenerNoCompose" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="TextColor">@color/black</item>
        <item name="VectorColor">@color/black</item>
        <item name="BackgroundColor">@color/white</item>
    </style>

    <style name="BackgroundColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/BackgroundColor</item>
    </style>

    <style name="MainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
    </style>

    <style name="SignInButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginVertical">@dimen/sign_in_method_button_vertical_margin
        </item>
        <item name="android:layout_marginHorizontal">
            @dimen/sign_in_method_button_horizontal_margin
        </item>
        <item name="android:paddingVertical">@dimen/sign_in_method_button_vertical_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/TextColor</item>
        <item name="colorControlNormal">?attr/TextColor</item>
        <item name="colorControlActivated">?attr/TextColor</item>
        <item name="colorControlHighlight">?attr/TextColor</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_width</item>
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
        <item name="android:colorAccent">?attr/TextColor</item>
        <item name="passwordToggleTint">?attr/TextColor</item>
    </style>
</resources>